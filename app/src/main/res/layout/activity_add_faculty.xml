<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_faculty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.enes.alumniapp.AddFaculty">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Faculty Name"
        android:ems="10"
        android:id="@+id/edit_faculty"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:hint="Faculty List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_list"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        tools:ignore="HardcodedText" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Add_Faculty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/spinner_faculty" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        android:id="@+id/imgbtn_delete_faculty"
        android:onClick="btn_click"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        android:layout_alignTop="@+id/btn_list_faculty"
        android:layout_toRightOf="@+id/edit_faculty"
        android:layout_toEndOf="@+id/edit_faculty"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
        android:text="Save Faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/btn_Add_Faculty"
        android:onClick="btn_click"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/edit_faculty"
        android:layout_toLeftOf="@+id/text_list"
        android:layout_toStartOf="@+id/text_list" />

    <Button
        android:text="List FACULTIES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_list_faculty"
        android:onClick="btn_click"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/spinner_faculty"
        android:layout_toLeftOf="@+id/imgbtn_delete_faculty"
        android:layout_toStartOf="@+id/imgbtn_delete_faculty" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_faculty"
        android:layout_alignLeft="@+id/btn_Add_Faculty"
        android:layout_alignStart="@+id/btn_Add_Faculty"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:id="@+id/button" />

</RelativeLayout>
